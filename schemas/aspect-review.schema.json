{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Killer-7 Aspect Review (v3)",
  "description": "Schema for per-aspect review JSON produced by the LLM runner and stored under .ai-review/aspects/*.json. This is the schema Killer-7 validates at runtime.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "scope_id",
    "status",
    "findings",
    "questions",
    "overall_explanation"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "enum": [
        3
      ]
    },
    "scope_id": {
      "type": "string",
      "minLength": 1
    },
    "status": {
      "type": "string",
      "enum": [
        "Approved",
        "Approved with nits",
        "Blocked",
        "Question"
      ]
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "title",
          "body",
          "priority",
          "sources",
          "code_location"
        ],
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 120
          },
          "body": {
            "type": "string",
            "minLength": 1
          },
          "priority": {
            "type": "string",
            "enum": [
              "P0",
              "P1",
              "P2",
              "P3"
            ]
          },
          "sources": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "code_location": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "repo_relative_path",
              "line_range"
            ],
            "properties": {
              "repo_relative_path": {
                "type": "string",
                "minLength": 1,
                "pattern": "^(?!/)(?!\\.\\.?$)(?!.*(?:^|/)\\.\\.(?:/|$)).+"
              },
              "line_range": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                  "start",
                  "end"
                ],
                "properties": {
                  "start": {
                    "type": "integer",
                    "minimum": 1
                  },
                  "end": {
                    "type": "integer",
                    "minimum": 1
                  }
                }
              }
            }
          }
        }
      }
    },
    "questions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "overall_explanation": {
      "type": "string",
      "minLength": 1
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "status": {
            "const": "Approved"
          }
        }
      },
      "then": {
        "properties": {
          "findings": {
            "maxItems": 0
          },
          "questions": {
            "maxItems": 0
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "status": {
            "const": "Approved with nits"
          }
        }
      },
      "then": {
        "properties": {
          "questions": {
            "maxItems": 0
          },
          "findings": {
            "not": {
              "contains": {
                "type": "object",
                "properties": {
                  "priority": {
                    "enum": [
                      "P0",
                      "P1"
                    ]
                  }
                },
                "required": [
                  "priority"
                ]
              }
            }
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "status": {
            "const": "Blocked"
          }
        }
      },
      "then": {
        "properties": {
          "findings": {
            "contains": {
              "type": "object",
              "properties": {
                "priority": {
                  "enum": [
                    "P0",
                    "P1"
                  ]
                }
              },
              "required": [
                "priority"
              ]
            },
            "minContains": 1
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "status": {
            "const": "Question"
          }
        }
      },
      "then": {
        "properties": {
          "questions": {
            "minItems": 1
          }
        }
      }
    }
  ]
}
